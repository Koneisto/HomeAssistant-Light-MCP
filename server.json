{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-10-17/server.schema.json",
  "name": "io.github.Koneisto/HomeAssistant-Light-MCP",
  "description": "Control Home Assistant lights and scenes. Lights only by design for safety.",
  "repository": {
    "url": "https://github.com/Koneisto/HomeAssistant-Light-MCP",
    "source": "github"
  },
  "version": "0.7.2",
  "packages": [
    {
      "registryType": "npm",
      "identifier": "ha-mcp-server",
      "version": "0.7.2",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "name": "HA_URL",
          "description": "Home Assistant URL (e.g., http://192.168.1.100:8123)",
          "isRequired": true,
          "format": "string",
          "isSecret": false
        },
        {
          "name": "HA_TOKEN",
          "description": "Home Assistant long-lived access token",
          "isRequired": true,
          "format": "string",
          "isSecret": true
        }
      ]
    }
  ]
}
